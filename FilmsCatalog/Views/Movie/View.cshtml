@model FilmsCatalog.ViewModels.Movie.MovieViewModel
@{

    ViewData["title"] = "Редактирование фильма";
    Movie movie = Model.Movie;
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="name">Название</label>
                <input value="@movie.Name" readonly type="text" class="form-control" id="name" placeholder="Введите название">
            </div>
            <div class="form-group">
                <label for="release_date">Год выпуска</label>
                <input readonly value="@movie.ReleaseDate.ToString("yyyy-MM-dd")" type="date" class="form-control" id="release_date" placeholder="Введите год выпуска">
            </div>
            <div class="form-group">
                <label for="director">Режисер</label>
                <input readonly value="@movie.Director" type="text" class="form-control" id="director" placeholder="Введите имя режисера">
            </div>
            ​<picture>
                <source srcset="@movie.Poster" type="image/svg+xml">
                <a class="fancy-box" href="@movie.Poster" target="_blank">
                    <img src="@movie.Poster" class="img-fluid img-thumbnail poster-img" alt="poster_img">
                </a>
            </picture>
            <div class="form-group">
                <label for="description">Описание</label>
                <textarea readonly class="form-control" id="description" rows="3">@movie.Description</textarea>
            </div>
        </div>
    </div>
</div>