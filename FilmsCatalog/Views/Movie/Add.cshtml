@model FilmsCatalog.ViewModels.Movie.MovieAddViewModel
@{

    ViewData["title"] = "Добавление фильма";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <partial name="PartialViews/InfoAlert" view-data="ViewData"/>
            <form method="post" asp-action="Add" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Название</label>
                    <input type="text" class="form-control" id="name" asp-for="Name" placeholder="Введите название">
                </div>
                <div class="form-group">
                    <label for="release_date">Год выпуска</label>
                    <input type="date" class="form-control" id="release_date" asp-for="ReleaseDate" placeholder="Введите год выпуска">
                </div>
                <div class="form-group">
                    <label for="director">Режисер</label>
                    <input type="text" class="form-control" id="director" asp-for="Director" placeholder="Введите имя режисера">
                </div>
                <div class="form-group">
                    <label for="poster">Постер</label>
                    <input type="file" class="form-control-file" id="poster" asp-for="Poster">
                </div>
                <div class="form-group">
                    <label for="description">Описание</label>
                    <textarea class="form-control" id="description" asp-for="Description" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Добавить</button>
            </form>
        </div>
    </div>
</div>