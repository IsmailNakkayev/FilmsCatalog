@model FilmsCatalog.ViewModels.Movie.MovieEditViewModel
@{

    ViewData["title"] = "Редактирование фильма";
    Movie movie = Model.Movie;
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <partial name="PartialViews/InfoAlert" view-data="ViewData" />
            <form method="post" asp-action="Edit" asp-route-id="@movie.Id" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Название</label>
                    <input value="@movie.Name" type="text" class="form-control" id="name" asp-for="Name" placeholder="Введите название">
                </div>
                <div class="form-group">
                    <label for="release_date">Год выпуска</label>
                    <input value="@movie.ReleaseDate.ToString("yyyy-MM-dd")" type="date" class="form-control" id="release_date" asp-for="ReleaseDate" placeholder="Введите год выпуска">
                </div>
                <div class="form-group">
                    <label for="director">Режисер</label>
                    <input value="@movie.Director" type="text" class="form-control" id="director" asp-for="Director" placeholder="Введите имя режисера">
                </div>
                ​<picture>
                    <source srcset="@movie.Poster" type="image/svg+xml">
                    <a class="fancy-box" href="@movie.Poster" target="_blank">
                        <img src="@movie.Poster" class="img-fluid img-thumbnail poster-img" alt="poster_img">
                    </a>
                </picture>
                <div class="form-group">
                    <label for="poster">Постер</label>
                    <input type="file" class="form-control-file" id="poster" asp-for="Poster">
                </div>
                <div class="form-group">
                    <label for="description">Описание</label>
                    <textarea class="form-control" id="description" name="Description" rows="3">@movie.Description</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Сохранить</button>
            </form>
        </div>
    </div>
</div>